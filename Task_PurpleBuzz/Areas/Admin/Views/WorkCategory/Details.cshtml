@using Task_PurpleBuzz.Areas.Admin.ViewModels.WorkCategory;
@model WorkCategoryDetailsVM

<div class="m-4 form-group">
	<a class="btn btn-primary" asp-action="index" asp-controller="workcategory">Return to list</a>
	<h1>Name</h1>
	<p>@Model.Name</p>
	<br />
	<h1>Status</h1>
	@if (Model.IsDeleted)
	{
		<p class="text-danger">Deleted</p>
	}
	else
	{
		<p class="text-success">Active</p>

	}
	<br />
	<h1>Created At</h1>
	<p>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</p>
	<br />
	<h1>Modified At</h1>
	<p>@Model.ModifiedAt?.ToString("dd.MM.yyyy HH:mm:ss")</p>
</div>